<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Auto Submit Form</title>
  <script>
    // Function to check if all dropdowns have values and submit the form
    function checkAndSubmitForm() {
      const dropdowns = document.querySelectorAll("select");
      
      // Log dropdown values for debugging
      console.log("Dropdown values:", Array.from(dropdowns).map(dropdown => dropdown.value));

      // Check if all dropdowns have values
      const allFilled = Array.from(dropdowns).every(dropdown => dropdown.value !== "");
      console.log("All dropdowns filled:", allFilled);

      if (allFilled) {
        console.log("Submitting form...");
        document.getElementById("dropdownForm").submit(); // Submit the form
      }
    }

    // Add event listeners to all dropdowns to trigger form submission check
    document.addEventListener("DOMContentLoaded", () => {
      const dropdowns = document.querySelectorAll("select");
      dropdowns.forEach(dropdown => {
        dropdown.addEventListener("change", checkAndSubmitForm); // Attach change event listener
      });
    });
  </script>
</head>
<body>
  <form id="dropdownForm" method="POST" action="/">
    <div>
      <label for="runDate">Run Date</label>
