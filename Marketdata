from flask import Flask, render_template, jsonify
import json

app = Flask(__name__)

# Load JSON file
with open("dashboard_filter.json") as f:  # Replace with your actual JSON file
    json_data = json.load(f)

@app.route("/")
def index():
    # Pass JSON data and keys to the template
    keys = ["Run Date", "Cob Date", "Consumer", "Cutoff", "Exposure", "Scenario"]
    return render_template("index.html", json_data=json_data, keys=keys)

if __name__ == "__main__":
    app.run(debug=True)
