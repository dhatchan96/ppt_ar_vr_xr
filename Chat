const uniqueValues = (key) => {
  let base = rowData;

  if (dd.techExec) base = base.filter(r => r["TECH_EXEC_FULL_NAME"] === dd.techExec);
  if (dd.ait) base = base.filter(r => r["AIT_NUMBER"] === dd.ait);
  if (dd.parentTool && key !== "PARENT_TOOL_TYPE")
    base = base.filter(r => r["PARENT_TOOL_TYPE"] === dd.parentTool);

  return [...new Set(base.map(r => r[key]).filter(Boolean))];
};
