def fetchRootApplicationModuleID(self, space_id, workspace_id, module_name):
    """
    Fetch the ID of the application module by name.
    """
    query = f"name EQ '{module_name}'"
    endpoint = f"shared_spaces/{space_id}/workspaces/{workspace_id}/application_modules?query={query}"
    status, response = self.endpoint.get(endpoint)

    if status == "Success" and response.get("total_count", 0) == 1:
        return response["data"][0]["id"]
    else:
        logger.error(f"Failed to fetch application module ID for '{module_name}'")
        return None
